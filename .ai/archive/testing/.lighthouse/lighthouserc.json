{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:9000/index.html",
        "http://localhost:9000/guides/getting-started.html",
        "http://localhost:9000/reference/controllers/index.html",
        "http://localhost:9000/guides/tutorials/tutorial-01-first-simulation.html",
        "http://localhost:9000/DOCUMENTATION_COVERAGE_MATRIX.html"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "screenEmulation": {
          "mobile": false,
          "width": 1400,
          "height": 900,
          "deviceScaleFactor": 1,
          "disabled": false
        },
        "emulatedUserAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:performance": ["warn", {"minScore": 0.80}],
        "categories:best-practices": ["warn", {"minScore": 0.90}],
        "categories:seo": ["warn", {"minScore": 0.85}],

        "color-contrast": ["error", {"minScore": 1}],
        "document-title": ["error", {"minScore": 1}],
        "html-has-lang": ["error", {"minScore": 1}],
        "meta-description": ["warn", {"minScore": 0.8}],
        "valid-lang": ["error", {"minScore": 1}],

        "button-name": ["error", {"minScore": 1}],
        "link-name": ["error", {"minScore": 1}],
        "aria-allowed-attr": ["error", {"minScore": 1}],
        "aria-required-attr": ["error", {"minScore": 1}],
        "aria-valid-attr": ["error", {"minScore": 1}],
        "aria-valid-attr-value": ["error", {"minScore": 1}],
        "aria-hidden-focus": ["error", {"minScore": 1}],
        "list": ["warn", {"minScore": 0.9}],
        "listitem": ["warn", {"minScore": 0.9}],

        "image-alt": ["error", {"minScore": 1}],
        "label": ["error", {"minScore": 1}],
        "input-image-alt": ["error", {"minScore": 1}],
        "frame-title": ["error", {"minScore": 1}],

        "first-contentful-paint": ["warn", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 2500}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "total-blocking-time": ["warn", {"maxNumericValue": 300}],

        "unused-css-rules": ["warn", {"maxLength": 10}],
        "unused-javascript": ["warn", {"maxLength": 10}],
        "modern-image-formats": ["warn", {"minScore": 0.8}],
        "uses-responsive-images": ["warn", {"minScore": 0.8}],

        "tap-targets": ["warn", {"minScore": 0.9}],
        "viewport": ["error", {"minScore": 1}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouse/reports",
      "reportFilenamePattern": "%%PATHNAME%%-%%DATETIME%%.report.%%EXTENSION%%"
    }
  }
}
